<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/equipment_center_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/electric_fan_center"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/equipment_center_frame_background"
            android:src="@drawable/electric_fan_center_focus"
            android:focusable="true" />

        <ImageView
            android:id="@+id/freezer_center"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:background="@drawable/equipment_center_frame_background"
            android:focusable="true"
            android:src="@drawable/freezer_center_selector" />

        <ImageView
            android:id="@+id/air_condition_center"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/equipment_center_frame_background"
            android:focusable="true"
            android:src="@drawable/air_condition_center_selector" />

        <ImageView
            android:id="@+id/box_center"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/equipment_center_frame_background"
            android:focusable="true"
            android:src="@drawable/box_center_selector" />

        <ImageView
            android:id="@+id/air_cleaner_center"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/equipment_center_frame_background"
            android:focusable="true"
            android:src="@drawable/air_cleaner_center_selector" />
    </LinearLayout>

    <ImageView
        android:id="@+id/add_equipment"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/equipment_center_frame_background"
        android:focusable="true"
        android:padding="20dp"
        android:src="@drawable/add_equipment_selector" />

</LinearLayout>