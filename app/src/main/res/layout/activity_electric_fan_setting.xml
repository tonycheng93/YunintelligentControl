<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/equipment_setting_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electric_fan_setting_switch"
                android:textSize="@dimen/txt_big_large" />

            <TextView
                android:id="@+id/equipment_setting_switch"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:background="@drawable/equipment_setting_arrow_selector"
                android:focusable="true"
                android:gravity="center"
                android:textSize="@dimen/txt_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginEnd="160dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electric_fan_setting_air_volume"
                android:textSize="@dimen/txt_big_large" />

            <TextView
                android:id="@+id/equipment_setting_air_volume"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:background="@drawable/equipment_setting_arrow_selector"
                android:focusable="true"
                android:gravity="center"
                android:textSize="@dimen/txt_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginEnd="160dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electric_fan_setting_air_direction"
                android:textSize="@dimen/txt_big_large" />

            <TextView
                android:id="@+id/equipment_setting_air_direction"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:background="@drawable/equipment_setting_arrow_selector"
                android:focusable="true"
                android:gravity="center"
                android:textSize="@dimen/txt_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginEnd="160dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/electric_fan_setting_time"
                android:textSize="@dimen/txt_big_large" />

            <TextView
                android:id="@+id/equipment_setting_time"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:background="@drawable/equipment_setting_arrow_selector"
                android:focusable="true"
                android:gravity="center"
                android:textSize="@dimen/txt_large" />
        </LinearLayout>

        <Button
            android:id="@+id/equipment_setting_confirm"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/equipment_setting_confirm_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/electric_fan_setting_confirm"
            android:textSize="@dimen/txt_big_large" />
    </LinearLayout>

</LinearLayout>